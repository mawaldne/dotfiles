[user]
	name = Michael Waldner
	email = michael.waldner@allergan.com
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = true
[alias]
    br = branch
    st = status -sb
    aa = add --all
    di = diff
    dc = diff --cached
    co = checkout
    amend = commit --amend
    graph = "!. ~/.githelpers && pretty_git_log_ignores"
    graphall = "!. ~/.githelpers && pretty_git_log_all"
    graphme = "!. ~/.githelpers && pretty_git_log_me"
    master = "!. ~/.githelpers && master"
    main = "!. ~/.githelpers && main"
    clean-branches = "!. ~/.githelpers && clean_branches"
    emptycommit = "!. ~/.githelpers && emptycommit"
[core]
    autocrlf = input
    editor = nvim
    pager = diff-so-fancy | less --tabs=4 -RFX
[branch]
    autosetuprebase = always
[credential]
    helper = osxkeychain
[push]
    default = current
[filter "media"]
    clean = git-media-clean %f
    smudge = git-media-smudge %f
[merge]
    tool = opendiff
[url "git@github.com:"]
    insteadOf = https://github.com/
[color "diff"]
	whitespace = red reverse
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
[color "log"]
	whitespace = red reverse
[diff]
	wsErrorHighlight = all
[log]
	wsErrorHighlight = all
[init]
	defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[interactive]
	diffFilter = diff-so-fancy --patch
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[gpg]
	format = ssh
[pull]
	rebase = true
